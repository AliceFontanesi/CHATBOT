MDScreen:
    name: "main"
    MDFloatLayout:
        md_bg_color: 91/255, 169/255, 197/255, 1
        MDLabel:
            text: "Ciao,"
            font_size: "30sp"
            pos_hint: {"center_x": .5, "center_y": .85}
            halign: "center"
            theme_text_color: "Custom"
            font_name: "Rajdhani-Regular"
            text_color: 1,1,1,1
        MDLabel:
            text: "sono Ispiro"
            font_size: "30sp"
