                Color:
                    rgb: (1,1,1,1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [22,22,22,22]
        Button:
            text: ""
            size_hint: .55, .08
            pos_hint: {"center_x": .5, "center_y": .12}
            background_color: 0,0,1,0
