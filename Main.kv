            halign: "center"
            theme_text_color: "Custom"
            font_name: "Rajdhani-Regular"
            text_color: 1,1,1,1
        Image:
            source: "logo1.png"
            size_hint: 1, 1
            pos_hint: {"center_x": .5, "center_y": .51}
        MDLabel:
            text: "Come posso aiutarti?"
            font_size: "30sp"
            pos_hint: {"center_x": .5, "center_y": .25}
