MDScreen:
    name: "main"
    MDFloatLayout:
        md_bg_color: 0, 0, 0, 1
        MDLabel:
            text: "Ciao, sono Ispiro, il tuo assistente virtuale"
            font_size: "35sp"
            pos_hint: {"center_x": .5, "center_y": .9}
            halign: "center"
            theme_text_color: "Custom"
            text_color: 1,1,1,1
        Image:
            source: "logo.png"
            size_hint: .8, .5
            pos_hint: {"center_x": .5, "center_y": .5}
        MDLabel:
            text: "Come posso aiutarti?"
            font_size: "35sp"
            pos_hint: {"center_x": .5, "center_y": .2}
            halign: "center"
            theme_text_color: "Custom"
            text_color: 1,1,1,1
        MDFloatLayout:
            size_hint: .45, .08
            pos_hint: {"center_x": .5, "center_y": .1}
            canvas:
                Color:
                    rgb: (238/255, 238/255, 1, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [22,22,22,22]
        Button:
            text: ""
            size_hint: .45, .08
            pos_hint: {"center_x": .5, "center_y": .1}
            background_color: 0,0,0,1
            on_release: 
                root.manager.transition.direction = "left"
                root.manager.current = "chats"
        MDLabel:
            text: "Let's chat"
            halign: "center"
            pos_hint: {"center_y": .1}
            font_size: "18sp"
            color: 1,1,1,1
        




